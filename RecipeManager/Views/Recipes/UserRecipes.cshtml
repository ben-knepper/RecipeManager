@model RecipeManager.Models.RecipeListViewModel

@{
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
    ViewBag.Title = "My Recipes";
}

<h2>User Recipes</h2>
<div>
    <table style="display: inline-block;" id="tableRecipes" class="table-bordered table-hover">
        <thead>
            <tr>
                <th>Recipe Id</th>
                <th>RecipeName</th>
                <th>View Recipe</th>
            </tr>
        </thead>

        <tbody>
            @if (Model.Recipes != null)
            {
                foreach (var Recipe in Model.Recipes)
                {
                    <tr>
                        <td>@Recipe.RecipeId</td>
                        <td>@Recipe.RecipeName</td>
                        <td>@Html.ActionLink("View", "Recipe", new { RecipeId = Recipe.RecipeId }, null)</td>
                        @* <td>@Recipe.Servings</td>
                            <td>@Recipe.MinutesToMake</td>
                            <td>@Recipe.Image</td>
                            <td>@Recipe.SourceName</td>*@
                    </tr>   
                }    
            }
        </tbody>
    </table>
